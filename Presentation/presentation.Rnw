PredDf = data.frame(NULL)
for(t in 2009:2018){
  OSAPred=forecast(window(complete_ts, start=1817, end=t), h=1, level=0.95, 
                   model = fit_2)
  PredDf=rbind(PredDf, data.frame(mean=OSAPred$mean[1], 
                                  lower=OSAPred$lower[1], 
                                  upper = OSAPred$upper[1]))}

interval=range(window(complete_ts, start=1817))
yval=seq(interval[1], interval[2], length.out=4)

par(mar=c(4,4,4,2))
plot(window(complete_ts, start=1817), col=4, las=1, yaxt="n", 
     ylab="Frequency", xlab="Year", main="Forecast from ARIMA(0, 1, 0)")
axis(2, at=yval, labels=sprintf("%.1e", yval), las=0)
abline(v=c(1816, 2009, 2019), lty="dotted", col=4, lwd=1)
interval=2010:2019
lines(interval, PredDf$mean, col = 'red')
lines(interval, PredDf$lower, col = 'green')
lines(interval, PredDf$upper, col = 'green')
legend(1900, 2.6e-4, legend=c("Observations", "Prediction", "Bounds of CI"),
       col=c(4, "red", "green"), lty=1)
@
\end{frame}

